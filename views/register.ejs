<!--
    This is the register page. It is a form that takes in the user's email, username, and password. 
-->

<%- include("partials/header.ejs") %>

<div class="register-container">
  <div class="login-header">
    <img class="login-logo" src="/images/logo.png" alt="logo" />
    <h1 class="login-title">BeCatBlog</h1>
  </div>

  <form action="/register" method="post">
    <div class="form-group">
      <input type="email" id="email" name="email" placeholder="Email" required>
    </div>
    <div class="form-group">
      <input type="text" id="username" name="username" placeholder="Username" required>
    </div>
    <div class="form-group">
      <input type="password" id="password" name="password" placeholder="Password" required>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
  </form>
  <div class="login-text">
    <p>Already have an account? <a href="/login">Login!</a></p>
  </div>
  <div class="register-agreement">
    <p>By registering, you agree to the <a href="/policy">UGC</a> and <a href="/privacy">Privacy</a> policies</p>
  </div>
  <div class="register-disclaimer">
    <p>We regret to inform you that you won't be able to log in after registering due to server peculiarities.
      <br>This issue will be resolved once the data is transferred to the database.
      <br>In the meantime, please use a test account for authorization.
      <br>We apologize for the inconvenience.
    </p>
  </div>
  </p>
  <footer>
    <p>This project is licensed under the <a href="https://opensource.org/licenses/MIT">MIT License</a></p>
  </footer>
</div>


<%- include("partials/footer.ejs") %>