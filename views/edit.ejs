<!--
    edit.ejs
    This is the edit page of the application. 
    It is a form that takes in the user's new post title, content, and image.
-->

<%- include("partials/header.ejs") %>


<%- include("partials/menu.ejs", {username: username}) %>

<section class="edit-form-container">
  <form action="/edit/<%= post.id %>" method="post" enctype="multipart/form-data">
    <div class="post-title-container">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="<%= post.title %>" required>
    </div>
    <div class="post-content-container">
      <label for="content">Content:</label>
      <textarea id="content" name="content" maxlength="500" required><%= post.content %></textarea>
    </div>
    <div class="post-image-container">
      <label for="image">Image:</label>
      <input type="file" id="image" name="image">
    </div>
    <button type="submit">Edit</button>
  </form>
</section>


<%- include("partials/footer.ejs") %>