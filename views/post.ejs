<!--
    post.ejs
    This is the post page of the application.
-->

<%- include("partials/header.ejs") %>


<%- include("partials/menu.ejs", {username: username}) %>

<section class="post-form-container">
  <form action="/post" method="post" enctype="multipart/form-data">
    <div class="post-title-container">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" maxlength="30" placeholder="Maximum 30 symbols..." required>
    </div>
    <div class="post-content-container">
      <label for="content">Content:</label>
      <textarea id="content" name="content" maxlength="500" placeholder="Maximum 500 symbols..." required></textarea>
    </div>
    <div class="post-image-container">
      <label for="image">Image:</label>
      <input type="file" id="image" name="image" accept=".jpg, .jpeg, .png" placeholder="test">
    </div>
    <button type="submit">Post</button>
  </form>
</section>

<%- include("partials/footer.ejs") %>